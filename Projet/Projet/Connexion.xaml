<Window x:Class="Projet.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d" 
        Title="Connexion" Height="310" Width="300" Style="{StaticResource fenetre}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <TextBox Margin="30,5,30,2" Grid.Row="0" VerticalContentAlignment="Center" Name="login" Text="Admin"/>
        <PasswordBox Margin="30,2,30,5" Grid.Row="1" VerticalContentAlignment="Center" Name="password" Password="admin63"/>
        <Button Content="Se connecter" Grid.Row="2" Margin="30,8" Click="Connect"/>
        <Button Content="Visiter" Grid.Row="3" Margin="30,8" Click="Visit"/>
        <Button Content="Créer un compte" Grid.Row="4" Margin="30,8" Click="CreatCompte"/>
    </Grid>
    
</Window>