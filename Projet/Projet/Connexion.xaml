<Window x:Class="Projet.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d" 
      Title="Connexion" Height="300" Width="300" MaxWidth="300" MaxHeight="300" MinWidth="300" MinHeight="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBox Height="32" Width="150" Margin="0,20,0,2" VerticalContentAlignment="Center" Name="login"/>
        <PasswordBox Height="32" Width="150" Margin=" 0,2,0,10" VerticalContentAlignment="Center" Name="password"/>
        <Button Content="Se connecter" Height="32" Width="150" Margin="0,10" Click="Connect"/>
        <Button Content="Visiter" Height="32" Width="150" Margin="0,10" Click="Visit"/>
        <Button Content="Créer un compte" Height="32" Width="150" Margin="0,10" Click="CreatCompte"/>
    </StackPanel>
</Window>