<Window x:Class="Projet.NewCocktail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d" 
        Title="NewCocktail" Height="450" Width="400" ResizeMode="NoResize">
    <Grid Name="main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Width="100" Margin="48,5,49,0"/>
        <Button Grid.Column="0" Grid.Row="3" Margin="15,5" Content="Modifier image"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Text="Nom :" VerticalAlignment="Center" Margin="15,12,0,12"/>
        <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" VerticalContentAlignment="Center" Name="nomC"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Text="Nombre d'ingrédients :" VerticalAlignment="Center" Margin="15,13,0,7"/>
        <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="35,5" Name="nbIngredientsC" LostFocus="Ingredient"/>
        <local:Ingredient Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3"/>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="5" Text="Recette :" VerticalAlignment="Center" Margin="15,13,0,13"/>
        <TextBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="6" Margin="5,5" VerticalContentAlignment="Center" Name="recetteC"/>
        <Button Grid.Column="0" Grid.Row="7" Content="Ajouter" Margin="15,5" Click="Ajout"/>
        <Button Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="7" Content="Annuler" Margin="15,5" Click="Annuler"/>
    </Grid>
</Window>
